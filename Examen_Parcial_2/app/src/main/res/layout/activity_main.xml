<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:padding="15dp"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:backgroundTint="@color/black"
                android:text="A"
                android:layout_marginStart="10dp"
                android:id="@+id/idBtnOnBT"
                ></Button>
            <Button
                android:padding="15dp"
                android:layout_marginStart="10dp"
                android:layout_width="50dp"
                android:backgroundTint="@color/black"
                android:layout_height="60dp"
                android:text="D"
                android:id="@+id/idBtnOffBT"
                ></Button>
            <Spinner
                android:layout_width="130dp"
                android:layout_height="60dp"
                android:id="@+id/idSpinDisp"
                android:layout_marginStart="150dp"
                >
            </Spinner>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            >

            <Button
                android:padding="15dp"
                android:layout_marginStart="150dp"
                android:backgroundTint="@color/black"
                android:layout_width="130dp"
                android:layout_height="60dp"
                android:text="Conectar"
                android:id="@+id/idBtnConect"
                ></Button>
            <Button
                android:padding="15dp"
                android:layout_marginStart="150dp"
                android:backgroundTint="@color/black"
                android:layout_width="130dp"
                android:layout_height="60dp"
                android:text="Disponibles"
                android:id="@+id/idBtnDispBT"
                ></Button>
        </LinearLayout>
        <ImageView
            android:id="@+id/circleImageView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="140dp"
            android:src="@drawable/background_circle"
            android:scaleType="center"
            android:elevation="8dp"
            android:padding="16dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/mensajeTextView"
                android:layout_marginStart="60dp"
                android:layout_width="300dp"
                android:textSize="30dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:layout_height="100dp"
                />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>